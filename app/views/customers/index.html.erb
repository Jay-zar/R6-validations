<p id="notice"><%= notice %></p>
<div class="container my-5">
<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th> Full name</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><i class="fa-solid fa-user m-2"></i><%= customer.full_name %></td>
        <td><%= customer.phone %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class: "btn btn-primary" %>
</div>
